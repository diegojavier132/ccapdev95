        <section class="movies container id=movies">

                <!-- <LOOP THAT CYCLES THROUGH THE OBJECTS OBTAINED FROM DB> -->
                    <% testmovie.forEach(function(result) { %>
                        <div class="movie-box"> 
                            <a href="<%=result.keyword%>">
                                <img src="<%=result.img%>" alt="One piece poster" class="movie-box-img">
                                <div class="box-text">
                                    <h2 class="movie-title"> <%-result.title%></h2>
                                    <span class="movie-description"><%-result.plot%></span>
                                </div>
                            </a>
                        </div>
                        <% });%> 


          
       
               
            </div>
        </section>


    
    </body>


</html>